{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KeypadZoom Site Pack",
  "description": "Schema for per-key site pack JSON files (key1-social.json through key9-shopping.json)",
  "type": "object",
  "required": ["key", "label", "sites"],
  "additionalProperties": false,
  "properties": {
    "key": {
      "type": "integer",
      "enum": [1, 2, 3, 4, 6, 7, 8, 9],
      "description": "Numpad key number (skip 5)"
    },
    "label": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Human-readable domain label"
    },
    "sites": {
      "type": "object",
      "description": "Map of tree paths to site entry arrays",
      "patternProperties": {
        "^[1-4,6-9](\\.[1-4,6-9]){0,4}$": {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": {
            "$ref": "#/definitions/siteEntry"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "siteEntry": {
      "type": "object",
      "required": ["d", "n", "u"],
      "additionalProperties": false,
      "properties": {
        "d": {
          "type": "string",
          "minLength": 1,
          "description": "Domain name (e.g., 'google.com')"
        },
        "n": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Display name for the site tile"
        },
        "u": {
          "type": "string",
          "format": "uri",
          "pattern": "^https?://",
          "description": "Full URL to open"
        },
        "b": {
          "type": "string",
          "pattern": "^[A-Z0-9]{2}$",
          "description": "Optional 2-letter brand code override"
        },
        "c": {
          "type": "string",
          "pattern": "^#([0-9A-Fa-f]{3}|[0-9A-Fa-f]{4}|[0-9A-Fa-f]{6}|[0-9A-Fa-f]{8})$",
          "description": "Optional hex brand color override"
        }
      }
    }
  }
}
