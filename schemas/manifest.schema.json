{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KeypadZoom Site Pack Manifest",
  "description": "Schema for the sites-latest/manifest.json file",
  "type": "object",
  "required": ["version", "updated", "cdnUrl", "brandsChecksum", "keys"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}\\.\\d+$",
      "description": "Version string in YYYY.MM.DD.N format"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "cdnUrl": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://",
      "description": "Base URL for CDN-hosted site packs"
    },
    "brandsChecksum": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}$",
      "description": "First 8 chars of SHA-256 of brands.json"
    },
    "keys": {
      "type": "object",
      "description": "Per-key metadata",
      "patternProperties": {
        "^[1-4,6-9]$": {
          "type": "object",
          "required": ["file", "label", "endpoints", "checksum"],
          "additionalProperties": false,
          "properties": {
            "file": {
              "type": "string",
              "pattern": "^key[1-4,6-9]-.+\\.json$"
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "endpoints": {
              "type": "integer",
              "minimum": 1
            },
            "checksum": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}$"
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
